<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<display-name>ChatApp</display-name>
	<welcome-file-list>
		<welcome-file>jsp/main-page.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
	    <servlet-name>Controller</servlet-name>
	    <servlet-class>com.prectise.servlet.Controller</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>ChatController</servlet-name>
	    <servlet-class>com.prectise.servlet.ChatController</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>ChatController</servlet-name>
        <url-pattern>/chat</url-pattern>
	</servlet-mapping>
	
</web-app>
